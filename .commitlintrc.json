{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "header-max-length": [0, "always", 90],
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "deps",
        "db",
        "user",
        "core",
        "auth",
        "auth0",
        "config",
        "ip-geolocation",
        "iqair",
        "alerts-in-ua"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "deps"
      ]
    ]
  }
}
